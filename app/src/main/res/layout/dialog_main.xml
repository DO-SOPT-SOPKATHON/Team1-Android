<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_black_fill_12_rect"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_main_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_main_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="34dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="그 날, 당신이 했던 걱정\n지금은 어떤가요?"
        android:textAppearance="@style/TextAppearance.Pretendard.SubHead3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_dialog_close" />

    <ImageView
        android:id="@+id/iv_main_dialog_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_main_dialog_trash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_dialog_title" />

    <ImageView
        android:id="@+id/iv_main_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_main_dialog_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_dialog_img" />

    <TextView
        android:id="@+id/btn_main_dialog_show_worry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_fill_4_rect"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:text="마주하러 가기"
        android:textAppearance="@style/TextAppearance.Pretendard.SubHead2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_main_dialog_text" />
</androidx.constraintlayout.widget.ConstraintLayout>